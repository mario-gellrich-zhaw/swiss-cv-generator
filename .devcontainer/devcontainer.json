{
  "name": "Swiss CV Generator",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "workspaceFolder": "/workspaces/swiss-cv-generator",
  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11"
    },
    "ghcr.io/devcontainers/features/git:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.black-formatter",
        "ms-python.isort",
        "ms-python.mypy-type-checker",
        "ms-python.pylint",
        "ms-vscode.vscode-json",
        "redhat.vscode-yaml",
        "ms-azuretools.vscode-docker",
        "mongodb.mongodb-vscode"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": true,
        "python.formatting.provider": "black",
        "python.formatting.blackArgs": [
          "--line-length=100"
        ],
        "python.testing.pytestEnabled": true,
        "python.testing.unittestEnabled": false,
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.organizeImports": true
        },
        "files.exclude": {
          "**/__pycache__": true,
          "**/*.pyc": true
        }
      }
    }
  },
  "forwardPorts": [
    27017
  ],
  "portsAttributes": {
    "27017": {
      "label": "MongoDB",
      "onAutoForward": "notify"
    }
  },
  "postCreateCommand": "bash /usr/local/bin/post-create.sh",
  "postStartCommand": "bash /usr/local/bin/post-start.sh",
  "remoteUser": "vscode",
  "remoteEnv": {
    "MONGODB_URI": "mongodb://localhost:27017",
    "MONGODB_DATABASE_SOURCE": "CV_DATA",
    "MONGODB_DATABASE_TARGET": "swiss_cv_generator",
    "PYTHONPATH": "/workspaces/swiss-cv-generator",
    "WORKSPACE_DIR": "/workspaces/swiss-cv-generator"
  }
}