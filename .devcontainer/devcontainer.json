{
  "name": "Swiss CV Generator",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "workspaceFolder": "/workspaces/swiss-cv-generator",
  "features": {
      "ghcr.io/devcontainers/features/python:1": {
        "version": "3.11"
      },
      "ghcr.io/devcontainers/features/git:1": {}
    },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-toolsai.jupyter",
        "ms-azuretools.vscode-docker",
        "ms-python.pylint",
        "ms-python.black-formatter",
        "ms-python.isort",
        "ms-python.mypy-type-checker",
        "analytic-signal.preview-pdf",
        "grapecity.gc-excelviewer",
        "github.copilot",
        "github.copilot-chat",
        "mechatroner.rainbow-csv",
        "randomfractalsinc.vscode-leaflet",
        "ms-vscode.vscode-json",
        "redhat.vscode-yaml",
        "mongodb.mongodb-vscode"
      ],
      "settings": {
        "python.testing.pytestEnabled": true,
        "python.testing.unittestEnabled": false,

        "editor.formatOnSave": true,
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.rulers": [80],

        "workbench.colorTheme": "Default Dark+",
        "workbench.iconTheme": "vs-seti",

        "black-formatter.args": ["--line-length=100"],

        "editor.codeActionsOnSave": {
          "source.organizeImports": "explicit"
        },

        "files.exclude": {
          "**/__pycache__": true,
          "**/*.pyc": true
        }
      }
    }
  },
  "forwardPorts": [27017],
  "portsAttributes": {
    "27017": {
      "label": "MongoDB",
      "onAutoForward": "notify"
    }
  },
  "postCreateCommand": "bash /usr/local/bin/post-create.sh",
  "postStartCommand": "bash /usr/local/bin/post-start.sh",
  "remoteUser": "vscode",
  "remoteEnv": {
    "MONGODB_URI": "mongodb://localhost:27017",
    "MONGODB_DATABASE_SOURCE": "CV_DATA",
    "MONGODB_DATABASE_TARGET": "swiss_cv_generator",
    "PYTHONPATH": "/workspaces/swiss-cv-generator",
    "WORKSPACE_DIR": "/workspaces/swiss-cv-generator"
  }
}